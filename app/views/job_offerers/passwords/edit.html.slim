h2
  = t('.change_your_password')
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  .field
    = f.label :password, t('.new_password')
    br
    - if @minimum_password_length
      em
        | (
        = @minimum_password_length
        |  characters minimum)
      br
    = f.password_field :password, autofocus: true, autocomplete: :password
  .field
    = f.label :password_confirmation, t('.confirm_new_password')
    br
    = f.password_field :password_confirmation, autocomplete: :password_confirmation
  .actions
    = f.submit t('.change_my_password')
= render "job_offerers/shared/links"
